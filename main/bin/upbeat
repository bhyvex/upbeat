#!/usr/bin/env node

require('mochiscript');
require('js-yaml');

var path   = require('path');
var upbeat = require('upbeat-server');
var dash   = require('upbeat-dashboard');

if (process.argv.length !== 3) {
  console.log("USAGE: upbeat <configFile>");
  process.exit(0);
}

var configFile = process.argv[2];
var config = require(path.join(process.cwd(), configFile));
var server = new upbeat.Server(config);
server.run();
dash.setup(server, config);
